class Female: PersonClass {
  init(first, middle, last, parent=null) {
    super.init(first, middle, last, parent);
    Icon = Styles.TextIcon(Chars.WhiteCircle);
  }
}

class Male: PersonClass {
  init(first, middle, last, parent=null) {
    super.init(first, middle, last, parent);
    Icon = Styles.TextIcon(Chars.WhiteSquare);
  }
}
