class PassingClass: EventClass {
  var Person;

  init(person) {
    super.init(person.Death);
    Person = person;
    Icon   = Styles.TextIcon("\u2A4D");
  }

  override DrawTimeline = Span {
    Person.ShowFullLink(false),
    " died",
    Styles.DiedAtAge(Person)
  };
}
